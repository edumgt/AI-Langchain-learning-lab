APP_ENV=dev
LOG_LEVEL=INFO

# LLM_PROVIDER: auto | ollama | openai_compatible | openai
LLM_PROVIDER=auto

# Ollama
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_MODEL=llama3.1:8b
OLLAMA_EMBED_MODEL=nomic-embed-text
OLLAMA_TIMEOUT_SEC=120

# OpenAI-compatible
OPENAI_COMPAT_BASE_URL=http://host.docker.internal:1234/v1
OPENAI_COMPAT_API_KEY=lm-studio
OPENAI_COMPAT_MODEL=gpt-4o-mini

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# RAG
RAG_ENABLED=true
CHROMA_PERSIST_DIR=/app/storage/chroma
DOCS_DIR=/app/data/docs
CHUNK_SIZE=900
CHUNK_OVERLAP=150
TOP_K=5

# LangSmith tracing (optional)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=
LANGCHAIN_PROJECT=langchain-catalog-lab

# HITL approval (catalog demos)
AUTO_APPROVE=true
APPROVE_TOKEN=YES
